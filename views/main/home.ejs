<%- include('../includes/start.ejs') %>

</head>

<body>
	
	<%- include('../includes/navbar.ejs') %>

	<section id="searchBarSection">
		<div class="container">
			<div class="row">
				<div class="col-6">
					<h1>Products</h1>
				</div>
				<div class="col-6">
					<form>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Search...">
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section id="productsSection">
		<div class="container">
			<div class="row justify-content-center">
				<% for (let product of products) { %>
					<div class="col-9 col-sm-6 col-md-4 col-lg-3 productCol">
						<% if(isLoggedIn) { %>
						<a href="/<%= rollNo %>/product/<%= product._id %>">
						<% } else { %>		
						<a href="/product/<%= product._id %>">
						<% } %>
							<div class="productContainer">
								<img class="productImage" src="<%= product.imageURL %>">
								<h1 class="productPrice">Rs. <%= product.price %></h1>
								<h1 class="productName"><%= product.shortdesc %></h1>
							</div>
						</a>
					</div>
				<% } %>
			</div>
		</div>
	</section>

	<section id="sortFilterSection">
		<div class="row">
			<div class="col-6">
				Filter
			</div>
			<div class="col-6">
				Sort
			</div>
		</div>
	</section>
    <%- include('../includes/end.ejs') %>